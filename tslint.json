{
    "rulesDirectory": [
        "./build/dist"
    ],
    "rules": {
        "grouped-imports": [
            true,
            {
                "groupByModuleScope": true,
                "firstVsThirdPartyOrder": "third-party-modules-first"
            }
        ],
        "parameter-formatting": [
            true,
            {
                "startOnNewLine": true,
                "endWithNewLine": true
            }
        ],
        "strict-indent-size": true
    }
}
